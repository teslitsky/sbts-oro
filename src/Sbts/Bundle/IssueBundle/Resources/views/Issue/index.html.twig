{% extends 'OroUIBundle:actions:index.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}

{% set pageTitle = 'sbts.issue.entity_plural_label' | trans %}
{% set gridName = 'issues-grid' %}

{% block navButtons %}
    {% include 'OroImportExportBundle:ImportExport:buttons.html.twig' with {
        entity_class: entity_class,
        importProcessor: 'sbts',
        exportProcessor: 'sbts',
        exportTemplateProcessor: 'sbts',
        dataGridName: gridName
    } %}
    {% if resource_granted('sbts_issue_create') %}
        {{ UI.addButton({
            'path': path('sbts_issue_create'),
            'entity_label': 'sbts.issue.entity_label' | trans
        }) }}
    {% endif %}
{% endblock %}
