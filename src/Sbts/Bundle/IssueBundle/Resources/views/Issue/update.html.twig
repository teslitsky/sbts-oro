{% extends 'OroUIBundle:actions:update.html.twig' %}

{% set entityId = entity.id %}

{% block navButtons %}
    {% set html = UI.saveAndCloseButton() %}

    {% if resource_granted('sbts_issue_update') %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}

    {{ UI.dropdownSaveButton({'html': html}) }}
    {{ UI.cancelButton(path('sbts_issue_index')) }}
{% endblock %}

{% block pageHeader %}
    {% if entityId %}
        {% set breadcrumbs = {
            'entity': entity,
            'indexPath': path('sbts_issue_index'),
            'indexLabel': 'sbts.issue.label.entity_plural_label' | trans,
            'entityTitle': entity.summary
        } %}

        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity' | trans({'%entityName%': 'sbts.issue.label.entity' | trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'issue-form' %}

    {% set dataBlocks = [{
        'title': 'General Information' | trans,
        'class': 'active',
        'subblocks': [{
        'title': '',
        'data': [
            form_row(form.summary),
            form_row(form.description),
            form_row(form.issue_type),
            form_row(form.issue_priority),
            form_row(form.issue_resolution),
            form.reporter is defined ? form_row(form.reporter) : '',
            form.assignee is defined ? form_row(form.assignee) : '',
        ]
        }]
    }] %}

    {% set additionalData = [] %}

    {% for child in form.children if child.vars.extra_field is defined and child.vars.extra_field %}
        {% set additionalData = additionalData|merge([form_row(child)]) %}
    {% endfor %}

    {% if additionalData is not empty %}
        {% set dataBlocks = dataBlocks|merge([{
            'title': 'Additional' | trans,
            'subblocks': [{
                'title': '',
                'useSpan': false,
                'data' : additionalData
            }]
        }]) %}
    {% endif %}

    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
{% endblock content_data %}
